# zshalias

alias -g W='| wc -l'
alias -g X='| xargs'
alias -g P='| percol'

alias sl='ls'
alias l='ls'
alias ll='ls -l'
alias lh='ls -lh'

alias gomi="rm -f '*~' \#*"

alias r='rails'
alias be='bundle exec'

alias c='tmux lsw P | cut -d":" -f 1 X tmux select-window -t'

alias tmux='tmux -u'
alias ta='tmux attach'

# todo.txt
alias t='todo.sh -d ~/.todo.cfg'