# zshalias

alias -g W='| wc -l'
alias -g X='| xargs'
alias -g P='| percol'

alias sl='ls'
alias l='ls'
alias ll='ls -l'
alias lh='ls -lh'

alias gomi="rm -f '*~' \#*"

alias r='rails'
alias be='bundle exec'

alias c='tmux lsw P | cut -d":" -f 1 X tmux select-window -t'

alias tmux='tmux -u'
alias ta='tmux attach'

# prevent brew doctor warning
# @see: http://qiita.com/takc923/items/45386905f70fde9af0e7
# alias brew="env PATH=${PATH/$HOME\/\.pyenv\/shims:?/} brew"
