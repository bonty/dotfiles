# zshantigen

if [ ! -e $HOME/.antigen/antigen.zsh ]; then
  git clone git://github.com/zsh-users/antigen.git ~/.antigen
fi

source ~/.antigen/antigen.zsh

# oh-my-zsh libary
antigen-use oh-my-zsh

antigen-bundles <<EOF
brew
bundler
capistrano
gem
git-flow
git
github
gitfast
osx
rails
rake
rbenv
EOF

antigen-bundle zsh-users/zsh-completions src
antigen-bundle zsh-users/zsh-syntax-highlighting

antigen-theme bonty/oh-my-zsh-theme prose-custom

antigen-apply

antigen-self-update() {
    cd ~/.antigen
    git pull
    popd
}
